@model IEnumerable<CRUDProgrammers.Models.PessoaModel>

@{
    ViewData["Title"] = "Index";
}

<div class="bg-info panel-body text-center">
    <h3>Cadastro de pessoas</h3>
</div>

<div class="text-right mt-2 mb-2">
    <a asp-action="Create" class="btn btn-info" title="Cadastrar">
        <span class="fa fa-user"></span>
        <span> Cadastrar</span>
    </a>
</div>

@await Html.PartialAsync("_PartialSearch", Model)

<div class="d-none d-lg-block">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-info">Alterar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-info">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-info">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-lg-none">
    <table class="table table-striped">
        <tbody>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("_PartialListItem", item)
            }
        </tbody>
    </table>
</div>